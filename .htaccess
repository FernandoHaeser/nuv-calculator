<IfModule mod_rewrite.c>
    RewriteEngine On

    # -------------------------
    # Esconde index.php
    # -------------------------
    RewriteCond %{THE_REQUEST} /index\.php [NC]
    RewriteRule ^index\.php$ / [R=301,L]

    # -------------------------
    # Rotas amigáveis
    # -------------------------
    RewriteRule ^login/?$          /html/login.html [L]
    RewriteRule ^menuNuv/?$        /html/menuNuv.php [L]
    RewriteRule ^decodificador/?$  /html/decodificador.php [L]
    RewriteRule ^relatorio/?$      /html/relatorioCanais.php [L]
    RewriteRule ^manutencao/?$     /html/manutencao.html [L]
    RewriteRule ^calcestimado/?$   /html/calcestimado.php [L]
    RewriteRule ^calcomb/?$        /html/calcomb.php [L]
    RewriteRule ^doc/?$             /html/doc.php [L]

    # -------------------------
    # Bloqueia acesso direto à /html/, exceto arquivos mapeados
    # -------------------------
    RewriteCond %{REQUEST_URI} !^/html/(login\.html|menuNuv\.php|decodificador\.php|relatorioCanais\.php|manutencao\.html|calcestimado\.php|calcomb\.php|doc\.php)$
    RewriteRule ^html/ - [F,L]

    # -------------------------
    # Esconde index.php como página inicial
    # -------------------------
    DirectoryIndex index.php
</IfModule>
